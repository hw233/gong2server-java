<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<bean id="globalManager" class="com.hadoit.game.engine.guardian.global.GlobalManager"
		destroy-method="dispose">
		<property name="dbsHost" value="${global.dbs_host}" />
		<property name="dbsPort" value="${global.dbs_port}" />
		<!-- <property name="listenHost" value="${global.global_host}" /> -->
		<property name="listenPort" value="${global.global_port}" />
		<property name="serverId" value="${global.server_id}" />
		<property name="codecFactory">
			<bean
				class="com.hadoit.game.engine.core.rpc.base.codec.factory.FstMessageCodecFactory" />
		</property>
		<property name="globalServerProxy" ref="globalServerProxy" />
	</bean>
</beans>